{% extends "base.dtl" %}

{% block title %}Brand{% endblock %}
{% block content %}        	

	Brand name : {{brand}}
	
	
	<h2>Models</h2>
	<ul>
	{% for id, model in models %}
	<li><a href="/device/{{id}}">{{model}}</a></li>
	{% endfor %}
	</ul>	
	<form action="/brand/{{brand}}" method="post">
		<button type="submit" id="delete-brand" name="brand" value="{{brand}}">Delete</button>
	</form>		
{% endblock %}